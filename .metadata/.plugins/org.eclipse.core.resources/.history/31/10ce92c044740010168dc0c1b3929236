package Day_8_stream_Prime_Palindrome;
import java.util.stream.IntStream;

public class PalindromeCheck_UsingJava8 {
    public static void main(String[] args) {
        String str = "Madam";

        boolean isPalindrome = IntStream.range(0, str.length() / 2)
                .allMatch(i -> Character.toLowerCase(str.charAt(i)) ==
                               Character.toLowerCase(str.charAt(str.length() - i - 1)));

        if (isPalindrome) {
            System.out.println(str + " is a palindrome.");
        } else {
            System.out.println(str + " is not a palindrome.");
        }
        
        IntStream.range(0, 10).forEach(num->System.out.print(num+" "));
    }
}
