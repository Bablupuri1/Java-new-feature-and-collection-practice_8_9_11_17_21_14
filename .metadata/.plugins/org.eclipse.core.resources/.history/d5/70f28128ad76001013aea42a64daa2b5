package CommonQuestionAsked;
import java.util.*;
import java.util.stream.*;

public class CharFrequency {
    public static void main(String[] args) {
        String str = "hello world";

        Map<Character, Long> freq = str.chars() // IntStream of chars
                .mapToObj(c -> (char) c)        // Convert int â†’ char
                .filter(c -> c != ' ')          // Ignore spaces
                .collect(Collectors.groupingBy(c -> c, Collectors.counting()));

        System.out.println(freq);
        
        
        
// ------------------------ ye galat code h -----------------------------------------------------       
//        int arr[]= {1,2,1,3,1};
//        List<int[]> asList = Arrays.asList(arr);
        
//        Arrays.stream(arr).forEach(num->System.out.print(Collections.frequency(asList, num)));
        
// --------------------------------------------------------------------------------       
        
// ------------------------ye sahi h usi ka---------------------------
        
        
        int arr[]= {1,2,1,3,1};
        
        Arrays.stream(arr).forEach(System.out::println);
        List<Integer> collect = Arrays.stream(arr).boxed().collect(Collectors.toList());
        
        
        
        collect.stream().distinct().
        forEach(num->
        System.out.println("num:"  +num +" "+ Collections.frequency(collect, num)));
        

        
        
        
    }
}
